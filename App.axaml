<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:Allva.Desktop.Converters"
             x:Class="Allva.Desktop.App"
             RequestedThemeVariant="Light">
    
    <Application.Styles>
        <FluentTheme />
    </Application.Styles>

    <!-- Recursos Globales -->
    <Application.Resources>
        <ResourceDictionary>
            <!-- ===================================== -->
            <!-- CONVERTERS - TODOS LOS NECESARIOS -->
            <!-- ===================================== -->
            <converters:BoolToColorConverter x:Key="BoolToColorConverter"/>
            <converters:BoolToFormTitleConverter x:Key="BoolToFormTitleConverter"/>
            <converters:NotEmptyConverter x:Key="NotEmptyConverter"/>
            <converters:GreaterThanZeroConverter x:Key="GreaterThanZeroConverter"/>
            <converters:EqualToZeroConverter x:Key="EqualToZeroConverter"/>
            <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
            <converters:NotNullToVisibilityConverter x:Key="NotNullToVisibilityConverter"/>
            <converters:BoolToIconConverter x:Key="BoolToIconConverter"/>

            <!-- ===================================== -->
            <!-- COLORES CORPORATIVOS ALLVA -->
            <!-- ===================================== -->
            <SolidColorBrush x:Key="PrimaryBlue">#0b5394</SolidColorBrush>
            <SolidColorBrush x:Key="PrimaryYellow">#FFD966</SolidColorBrush>
            <SolidColorBrush x:Key="AccentYellow">#FFC600</SolidColorBrush>
            <SolidColorBrush x:Key="SuccessGreen">#4caf50</SolidColorBrush>
            <SolidColorBrush x:Key="DangerRed">#d32f2f</SolidColorBrush>
            <SolidColorBrush x:Key="WarningOrange">#ff9800</SolidColorBrush>
            
            <!-- Textos -->
            <SolidColorBrush x:Key="TextPrimary">#333333</SolidColorBrush>
            <SolidColorBrush x:Key="TextSecondary">#666666</SolidColorBrush>
            <SolidColorBrush x:Key="TextTertiary">#999999</SolidColorBrush>
            
            <!-- Bordes -->
            <SolidColorBrush x:Key="BorderLight">#cccccc</SolidColorBrush>
            <SolidColorBrush x:Key="BorderMedium">#e0e0e0</SolidColorBrush>
            
            <!-- Fondos -->
            <SolidColorBrush x:Key="BackgroundLight">#f3f3f3</SolidColorBrush>
            <SolidColorBrush x:Key="BackgroundMedium">#f8f8f8</SolidColorBrush>
            <SolidColorBrush x:Key="BackgroundWhite">#FFFFFF</SolidColorBrush>
        </ResourceDictionary>
    </Application.Resources>

</Application>
