<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Allva.Desktop.ViewModels.Admin"
             xmlns:converters="using:Allva.Desktop.Converters"
             mc:Ignorable="d" d:DesignWidth="1400" d:DesignHeight="900"
             x:Class="Allva.Desktop.Views.Admin.ManageComerciosView"
             x:DataType="vm:ManageComerciosViewModel">

    <!-- NO necesitamos declarar converters aquÃ­ porque ya estÃ¡n en App.axaml como recursos globales -->

    <UserControl.Styles>
        <!-- Estilo para botÃ³n primario -->
        <Style Selector="Button.btn-primary">
            <Setter Property="Background" Value="#003366"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.btn-primary:pointerover">
            <Setter Property="Background" Value="#0b5394"/>
        </Style>

        <!-- Estilo para botÃ³n secundario -->
        <Style Selector="Button.btn-secondary">
            <Setter Property="Background" Value="#6c757d"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Estilo para botones de acciÃ³n -->
        <Style Selector="Button.btn-action">
            <Setter Property="Background" Value="#f8f9fa"/>
            <Setter Property="Foreground" Value="#003366"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#dee2e6"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>
        <Style Selector="Button.btn-action:pointerover">
            <Setter Property="Background" Value="#e9ecef"/>
        </Style>

        <!-- Estilo para botÃ³n eliminar -->
        <Style Selector="Button.btn-danger">
            <Setter Property="Background" Value="#dc3545"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Estilo para tarjetas de comercio -->
        <Style Selector="Border.comercio-card">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#e0e0e0"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Transitions">
                <Transitions>
                    <BoxShadowsTransition Property="BoxShadow" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Border.comercio-card:pointerover">
            <Setter Property="BoxShadow" Value="0 4 12 0 #15000000"/>
        </Style>

        <!-- Estilos para TextBox y ComboBox -->
        <Style Selector="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#ced4da"/>
            <Setter Property="CornerRadius" Value="6"/>
        </Style>
        <Style Selector="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#ced4da"/>
            <Setter Property="CornerRadius" Value="6"/>
        </Style>
    </UserControl.Styles>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ============================================ -->
        <!-- HEADER CON ESTADÃSTICAS Y BOTÃ“N NUEVO -->
        <!-- ============================================ -->
        <Border Grid.Row="0" Background="White" 
                BorderThickness="0,0,0,1" BorderBrush="#e0e0e0"
                Padding="32,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- EstadÃ­sticas -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="48">
                    <StackPanel Spacing="6">
                        <TextBlock Text="TOTAL COMERCIOS" 
                                   FontSize="13" FontWeight="Bold" 
                                   Foreground="#666" LetterSpacing="0.5"/>
                        <TextBlock Text="{Binding TotalComercios}" 
                                   FontSize="36" FontWeight="Bold" 
                                   Foreground="#003366"/>
                    </StackPanel>

                    <StackPanel Spacing="6">
                        <TextBlock Text="TOTAL LOCALES" 
                                   FontSize="13" FontWeight="Bold" 
                                   Foreground="#666" LetterSpacing="0.5"/>
                        <TextBlock Text="{Binding TotalLocales}" 
                                   FontSize="36" FontWeight="Bold" 
                                   Foreground="#FFC600"/>
                    </StackPanel>
                </StackPanel>

                <!-- BotÃ³n Nuevo Comercio -->
                <Button Grid.Column="1" 
                        Classes="btn-primary"
                        Command="{Binding MostrarFormularioComercioCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="+" FontSize="22" FontWeight="Bold"/>
                        <TextBlock Text="NUEVO COMERCIO" FontSize="15" FontWeight="Bold"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- ============================================ -->
        <!-- CONTENIDO PRINCIPAL -->
        <!-- ============================================ -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- ============================================ -->
            <!-- ÃREA DE FILTROS Y LISTA -->
            <!-- ============================================ -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="32,24" Spacing="24">
                    
                    <!-- BARRA DE FILTROS -->
                    <Border Background="White" 
                            BorderThickness="1" BorderBrush="#e0e0e0"
                            CornerRadius="10" Padding="24">
                        <Grid ColumnDefinitions="2*,*,*,Auto,Auto">
                            
                            <TextBox Grid.Column="0" 
                                     Text="{Binding FiltroBusqueda}"
                                     Watermark="Buscar por nombre, local o cÃ³digo..."
                                     Margin="0,0,12,0"/>

                            <ComboBox Grid.Column="1"
                                      SelectedItem="{Binding FiltroModulo}"
                                      ItemsSource="{Binding ModulosDisponibles}"
                                      Margin="0,0,12,0">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" FontSize="14"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <ComboBox Grid.Column="2"
                                      SelectedItem="{Binding FiltroEstado}"
                                      Margin="0,0,12,0">
                                <ComboBoxItem Content="Todos" FontSize="14"/>
                                <ComboBoxItem Content="Activo" FontSize="14"/>
                                <ComboBoxItem Content="Inactivo" FontSize="14"/>
                            </ComboBox>

                            <Button Grid.Column="3" 
                                    Classes="btn-primary"
                                    Command="{Binding AplicarFiltrosCommand}"
                                    Margin="0,0,8,0">
                                <TextBlock Text="APLICAR" FontSize="13" FontWeight="Bold"/>
                            </Button>

                            <Button Grid.Column="4" 
                                    Classes="btn-secondary"
                                    Command="{Binding LimpiarFiltrosCommand}">
                                <TextBlock Text="LIMPIAR" FontSize="13" FontWeight="Bold"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- LISTA DE COMERCIOS -->
                    <ItemsControl ItemsSource="{Binding ComerciosFiltrados}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Classes="comercio-card">
                                    <!-- CABECERA SIMPLIFICADA -->
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- InformaciÃ³n del comercio -->
                                        <StackPanel Grid.Column="0" Spacing="12">
                                            <TextBlock Text="{Binding NombreComercio}" 
                                                       FontSize="20" FontWeight="Bold" 
                                                       Foreground="#003366"/>
                                            <StackPanel Orientation="Horizontal" Spacing="24">
                                                <TextBlock FontSize="14" Foreground="#666">
                                                    <Run Text="ðŸ“ž"/>
                                                    <Run Text="{Binding NumeroContacto}"/>
                                                </TextBlock>
                                                <TextBlock FontSize="14" Foreground="#666">
                                                    <Run Text="âœ‰"/>
                                                    <Run Text="{Binding MailContacto}"/>
                                                </TextBlock>
                                                <TextBlock FontSize="14" Foreground="#666">
                                                    <Run Text="ðŸŒ"/>
                                                    <Run Text="{Binding Pais}"/>
                                                </TextBlock>
                                            </StackPanel>

                                            <!-- Badges informativos -->
                                            <StackPanel Orientation="Horizontal" Spacing="12" Margin="0,8,0,0">
                                                <Border Background="#e3f2fd" 
                                                        CornerRadius="6" Padding="12,6">
                                                    <TextBlock FontSize="13" FontWeight="SemiBold" Foreground="#0b5394">
                                                        <Run Text="{Binding CantidadLocales}"/>
                                                        <Run Text="Locales"/>
                                                    </TextBlock>
                                                </Border>
                                                <Border Background="#e8f5e9" 
                                                        CornerRadius="6" Padding="12,6">
                                                    <TextBlock FontSize="13" FontWeight="SemiBold" Foreground="#28a745">
                                                        <Run Text="{Binding TotalUsuarios}"/>
                                                        <Run Text="Empleados"/>
                                                    </TextBlock>
                                                </Border>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- Botones de acciÃ³n -->
                                        <StackPanel Grid.Column="1" 
                                                    Orientation="Horizontal" 
                                                    Spacing="10"
                                                    VerticalAlignment="Top">
                                            <Button Classes="btn-action"
                                                    Command="{Binding $parent[ItemsControl].((vm:ManageComerciosViewModel)DataContext).VerDetallesComercioCommand}"
                                                    CommandParameter="{Binding}">
                                                <TextBlock Text="VER DETALLES" FontSize="12" FontWeight="Bold"/>
                                            </Button>
                                            <Button Classes="btn-action"
                                                    Command="{Binding $parent[ItemsControl].((vm:ManageComerciosViewModel)DataContext).EditarComercioCommand}"
                                                    CommandParameter="{Binding}">
                                                <TextBlock Text="EDITAR" FontSize="12" FontWeight="Bold"/>
                                            </Button>
                                            <Button Classes="btn-danger"
                                                    Command="{Binding $parent[ItemsControl].((vm:ManageComerciosViewModel)DataContext).EliminarComercioCommand}"
                                                    CommandParameter="{Binding}">
                                                <TextBlock Text="ELIMINAR" FontSize="12" FontWeight="Bold"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Mensaje cuando no hay comercios -->
                    <Border IsVisible="{Binding !ComerciosFiltrados.Count}"
                            Background="#f8f9fa"
                            BorderThickness="1" BorderBrush="#e0e0e0"
                            CornerRadius="10"
                            Padding="48"
                            MinHeight="300">
                        <StackPanel Spacing="16" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center">
                            <TextBlock Text="NO HAY COMERCIOS REGISTRADOS" 
                                       FontSize="20" FontWeight="Bold" 
                                       Foreground="#999"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Haz clic en NUEVO COMERCIO para agregar el primer comercio" 
                                       FontSize="15" Foreground="#999" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- ============================================ -->
            <!-- PANEL LATERAL DERECHO DESLIZANTE -->
            <!-- ============================================ -->
            <Border Grid.Column="1" 
                    Width="600"
                    Background="White"
                    BorderThickness="1,0,0,0"
                    BorderBrush="#e0e0e0"
                    IsVisible="{Binding MostrarPanelDerecho}">
                
                <Grid RowDefinitions="Auto,*,Auto">
                    
                    <!-- Header del Panel -->
                    <Border Grid.Row="0" 
                            Background="#003366" 
                            Padding="24,20">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0"
                                       Text="{Binding TituloPanelDerecho}" 
                                       FontSize="18" FontWeight="Bold" 
                                       Foreground="White"
                                       VerticalAlignment="Center"/>
                            <Button Grid.Column="1"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Command="{Binding CerrarPanelDerechoCommand}"
                                    Cursor="Hand">
                                <TextBlock Text="âœ•" FontSize="24" Foreground="White"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Contenido dinÃ¡mico del panel -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="24" Spacing="24">
                            
                            <!-- DETALLES DEL COMERCIO -->
                            <Border IsVisible="{Binding !MostrarFormulario}"
                                    Background="#f8f9fa"
                                    BorderThickness="1" BorderBrush="#e0e0e0"
                                    CornerRadius="10"
                                    Padding="20">
                                <StackPanel Spacing="16">
                                    <TextBlock Text="INFORMACIÃ“N DEL COMERCIO" 
                                               FontSize="16" FontWeight="Bold" 
                                               Foreground="#003366"
                                               LetterSpacing="0.5"/>
                                    
                                    <!-- Datos bÃ¡sicos -->
                                    <StackPanel Spacing="12">
                                        <StackPanel>
                                            <TextBlock Text="Nombre comercial" FontSize="12" Foreground="#666" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding ComercioSeleccionado.NombreComercio}" FontSize="15" Foreground="#333" Margin="0,4,0,0"/>
                                        </StackPanel>
                                        
                                        <StackPanel>
                                            <TextBlock Text="RazÃ³n social" FontSize="12" Foreground="#666" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding ComercioSeleccionado.NombreSrl}" FontSize="15" Foreground="#333" Margin="0,4,0,0"/>
                                        </StackPanel>

                                        <StackPanel>
                                            <TextBlock Text="DirecciÃ³n central" FontSize="12" Foreground="#666" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding ComercioSeleccionado.DireccionCentral}" FontSize="15" Foreground="#333" Margin="0,4,0,0"/>
                                        </StackPanel>

                                        <Grid ColumnDefinitions="*,*">
                                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                                <TextBlock Text="TelÃ©fono" FontSize="12" Foreground="#666" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding ComercioSeleccionado.NumeroContacto}" FontSize="15" Foreground="#333" Margin="0,4,0,0"/>
                                            </StackPanel>
                                            
                                            <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                                <TextBlock Text="PaÃ­s" FontSize="12" Foreground="#666" FontWeight="SemiBold"/>
                                                <TextBlock Text="{Binding ComercioSeleccionado.Pais}" FontSize="15" Foreground="#333" Margin="0,4,0,0"/>
                                            </StackPanel>
                                        </Grid>

                                        <StackPanel>
                                            <TextBlock Text="Email" FontSize="12" Foreground="#666" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding ComercioSeleccionado.MailContacto}" FontSize="15" Foreground="#333" Margin="0,4,0,0"/>
                                        </StackPanel>

                                        <StackPanel IsVisible="{Binding ComercioSeleccionado.Observaciones, Converter={StaticResource NotEmptyConverter}}">
                                            <TextBlock Text="Observaciones" FontSize="12" Foreground="#666" FontWeight="SemiBold"/>
                                            <TextBlock Text="{Binding ComercioSeleccionado.Observaciones}" FontSize="15" Foreground="#333" Margin="0,4,0,0" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- ARCHIVOS SUBIDOS -->
                            <Border IsVisible="{Binding !MostrarFormulario}"
                                    Background="#fff3cd"
                                    BorderThickness="1" BorderBrush="#ffc107"
                                    CornerRadius="10"
                                    Padding="20">
                                <StackPanel Spacing="12">
                                    <TextBlock Text="ARCHIVOS ADJUNTOS" 
                                               FontSize="16" FontWeight="Bold" 
                                               Foreground="#856404"
                                               LetterSpacing="0.5"/>
                                    
                                    <!-- Lista de archivos -->
                                    <ItemsControl ItemsSource="{Binding ArchivosComercioSeleccionado}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="White" 
                                                        BorderBrush="#ffc107" BorderThickness="1"
                                                        CornerRadius="6" 
                                                        Padding="12" 
                                                        Margin="0,0,0,8">
                                                    <Grid ColumnDefinitions="Auto,*,Auto">
                                                        <TextBlock Grid.Column="0" Text="ðŸ“„" FontSize="20" Margin="0,0,12,0"/>
                                                        <TextBlock Grid.Column="1" Text="{Binding NombreArchivo}" FontSize="14" VerticalAlignment="Center"/>
                                                        <Button Grid.Column="2" 
                                                                Background="Transparent" 
                                                                BorderThickness="0"
                                                                Command="{Binding $parent[ItemsControl].((vm:ManageComerciosViewModel)DataContext).DescargarArchivoCommand}"
                                                                CommandParameter="{Binding}">
                                                            <TextBlock Text="â¬‡" FontSize="18" Foreground="#856404"/>
                                                        </Button>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- Mensaje sin archivos -->
                                    <TextBlock IsVisible="{Binding !ArchivosComercioSeleccionado.Count}"
                                               Text="No hay archivos adjuntos"
                                               FontSize="14"
                                               Foreground="#856404"
                                               FontStyle="Italic"
                                               HorizontalAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <!-- LOCALES DEL COMERCIO CON DETALLES -->
                            <Border IsVisible="{Binding !MostrarFormulario}"
                                    Background="#e3f2fd"
                                    BorderThickness="1" BorderBrush="#0b5394"
                                    CornerRadius="10"
                                    Padding="20">
                                <StackPanel Spacing="16">
                                    <TextBlock Text="LOCALES Y PERMISOS" 
                                               FontSize="16" FontWeight="Bold" 
                                               Foreground="#0b5394"
                                               LetterSpacing="0.5"/>
                                    
                                    <!-- Lista de locales con todos sus detalles -->
                                    <ItemsControl ItemsSource="{Binding ComercioSeleccionado.Locales}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="White" 
                                                        BorderBrush="#0b5394" BorderThickness="1"
                                                        CornerRadius="8" 
                                                        Padding="16" 
                                                        Margin="0,0,0,12">
                                                    <StackPanel Spacing="12">
                                                        
                                                        <!-- Header: CÃ³digo, nombre y controles -->
                                                        <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                                                            <Border Grid.Column="0" 
                                                                    Background="#003366" 
                                                                    CornerRadius="6" 
                                                                    Padding="12,6"
                                                                    Margin="0,0,12,0">
                                                                <TextBlock Text="{Binding CodigoLocal}" 
                                                                           FontSize="14" FontWeight="Bold" 
                                                                           Foreground="White"/>
                                                            </Border>

                                                            <TextBlock Grid.Column="1"
                                                                       Text="{Binding NombreLocal}" 
                                                                       FontSize="16" FontWeight="Bold" 
                                                                       Foreground="#003366"
                                                                       VerticalAlignment="Center"/>
                                                            
                                                            <!-- BotÃ³n Expandir/Contraer -->
                                                            <Button Grid.Column="2"
                                                                    Background="Transparent"
                                                                    BorderThickness="0"
                                                                    Padding="8"
                                                                    Margin="0,0,8,0"
                                                                    Cursor="Hand"
                                                                    Command="{Binding $parent[ItemsControl].((vm:ManageComerciosViewModel)DataContext).ToggleLocalDetallesCommand}"
                                                                    CommandParameter="{Binding}">
                                                                <TextBlock Text="{Binding MostrarDetalles, Converter={StaticResource BoolToExpandIconConverter}}" 
                                                                           FontSize="18" 
                                                                           Foreground="#003366"/>
                                                            </Button>
                                                            
                                                            <!-- Badge de estado (funcional) -->
                                                            <Button Grid.Column="3"
                                                                    Background="{Binding Activo, Converter={StaticResource EstadoActivoColorConverter}}"
                                                                    Foreground="White"
                                                                    FontWeight="Bold"
                                                                    FontSize="11"
                                                                    Padding="12,6"
                                                                    BorderThickness="0"
                                                                    CornerRadius="6"
                                                                    Cursor="Hand"
                                                                    Command="{Binding $parent[ItemsControl].((vm:ManageComerciosViewModel)DataContext).CambiarEstadoLocalDetalleCommand}"
                                                                    CommandParameter="{Binding}">
                                                                <TextBlock Text="{Binding Activo, Converter={StaticResource EstadoTextoMayusculaConverter}}" 
                                                                           FontSize="11" FontWeight="Bold"/>
                                                            </Button>
                                                        </Grid>

                                                        <!-- Detalles expandibles del local -->
                                                        <StackPanel IsVisible="{Binding MostrarDetalles}" Spacing="12">
                                                            <!-- DirecciÃ³n completa -->
                                                            <StackPanel>
                                                                <TextBlock Text="DirecciÃ³n completa" FontSize="11" Foreground="#666" FontWeight="SemiBold"/>
                                                                <TextBlock FontSize="14" Foreground="#333" Margin="0,4,0,0" TextWrapping="Wrap">
                                                                    <Run Text="{Binding Direccion}"/>
                                                                    <Run Text=", NÂº "/><Run Text="{Binding LocalNumero}"/>
                                                                    <Run Text="{Binding Escalera, StringFormat=' Esc. {0}', Converter={StaticResource NullToEmptyConverter}}"/>
                                                                    <Run Text="{Binding Piso, StringFormat=' Piso {0}', Converter={StaticResource NullToEmptyConverter}}"/>
                                                                </TextBlock>
                                                            </StackPanel>

                                                            <!-- Contacto -->
                                                            <Grid ColumnDefinitions="*,*">
                                                                <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                                                    <TextBlock Text="TelÃ©fono" FontSize="11" Foreground="#666" FontWeight="SemiBold"/>
                                                                    <TextBlock Text="{Binding Telefono}" FontSize="14" Foreground="#333" Margin="0,4,0,0"/>
                                                                </StackPanel>
                                                                <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                                                    <TextBlock Text="Email" FontSize="11" Foreground="#666" FontWeight="SemiBold"/>
                                                                    <TextBlock Text="{Binding Email}" FontSize="14" Foreground="#333" Margin="0,4,0,0"/>
                                                                </StackPanel>
                                                            </Grid>

                                                            <!-- Observaciones (si existen) -->
                                                            <StackPanel IsVisible="{Binding Observaciones, Converter={StaticResource NotEmptyConverter}}">
                                                                <TextBlock Text="Observaciones" FontSize="11" Foreground="#666" FontWeight="SemiBold"/>
                                                                <TextBlock Text="{Binding Observaciones}" 
                                                                           FontSize="14" Foreground="#333" 
                                                                           Margin="0,4,0,0" 
                                                                           TextWrapping="Wrap"/>
                                                            </StackPanel>

                                                            <!-- Usuarios en el local (solo conteo, sin iconos) - CAMBIO: "Flotante" â†’ "Flooter" -->
                                                            <StackPanel>
                                                                <TextBlock Text="Usuarios en este local" FontSize="11" Foreground="#666" FontWeight="SemiBold"/>
                                                                <Grid ColumnDefinitions="*,*" Margin="0,4,0,0">
                                                                    <Border Grid.Column="0" Background="#e3f2fd" CornerRadius="4" Padding="12,6" Margin="0,0,4,0">
                                                                        <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                                                                            <TextBlock FontSize="16" FontWeight="Bold" Foreground="#003366" VerticalAlignment="Center">
                                                                                <Run Text="{Binding CantidadUsuariosFijos}"/>
                                                                            </TextBlock>
                                                                            <TextBlock Text="Fijos" FontSize="12" Foreground="#666" VerticalAlignment="Center"/>
                                                                        </StackPanel>
                                                                    </Border>
                                                                    <Border Grid.Column="1" Background="#fff3cd" CornerRadius="4" Padding="12,6" Margin="4,0,0,0">
                                                                        <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center">
                                                                            <TextBlock FontSize="16" FontWeight="Bold" Foreground="#856404" VerticalAlignment="Center">
                                                                                <Run Text="{Binding CantidadUsuariosFlooter}"/>
                                                                            </TextBlock>
                                                                            <TextBlock Text="Flooter" FontSize="12" Foreground="#666" VerticalAlignment="Center"/>
                                                                        </StackPanel>
                                                                    </Border>
                                                                </Grid>
                                                            </StackPanel>

                                                            <!-- MÃ³dulos activos -->
                                                            <StackPanel>
                                                                <TextBlock Text="MÃ³dulos habilitados" FontSize="11" Foreground="#666" FontWeight="SemiBold" Margin="0,0,0,8"/>
                                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                                    <Border Background="#ffc107" 
                                                                            CornerRadius="4" Padding="8,4"
                                                                            IsVisible="{Binding ModuloDivisas}">
                                                                        <TextBlock Text="DIVISAS" 
                                                                                   FontSize="10" FontWeight="Bold" 
                                                                                   Foreground="White"/>
                                                                    </Border>
                                                                    <Border Background="#28a745" 
                                                                            CornerRadius="4" Padding="8,4"
                                                                            IsVisible="{Binding ModuloPackAlimentos}">
                                                                        <TextBlock Text="ALIMENTOS" 
                                                                                   FontSize="10" FontWeight="Bold" 
                                                                                   Foreground="White"/>
                                                                    </Border>
