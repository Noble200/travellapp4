<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Allva.Desktop.ViewModels.Admin"
             xmlns:converters="using:Allva.Desktop.Converters"
             mc:Ignorable="d" d:DesignWidth="1400" d:DesignHeight="900"
             x:Class="Allva.Desktop.Views.Admin.ManageComerciosView"
             x:DataType="vm:ManageComerciosViewModel">

    <UserControl.Styles>
        <!-- Estilo para botón primario -->
        <Style Selector="Button.btn-primary">
            <Setter Property="Background" Value="#003366"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.btn-primary:pointerover">
            <Setter Property="Background" Value="#0b5394"/>
        </Style>

        <!-- Estilo para botón secundario -->
        <Style Selector="Button.btn-secondary">
            <Setter Property="Background" Value="#6c757d"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Estilo para botones de acción -->
        <Style Selector="Button.btn-action">
            <Setter Property="Background" Value="#f8f9fa"/>
            <Setter Property="Foreground" Value="#003366"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#dee2e6"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>
        <Style Selector="Button.btn-action:pointerover">
            <Setter Property="Background" Value="#e9ecef"/>
        </Style>

        <!-- Estilo para botón eliminar -->
        <Style Selector="Button.btn-danger">
            <Setter Property="Background" Value="#dc3545"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Estilo para tarjetas de comercio -->
        <Style Selector="Border.comercio-card">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#e0e0e0"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Transitions">
                <Transitions>
                    <BoxShadowsTransition Property="BoxShadow" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Border.comercio-card:pointerover">
            <Setter Property="BoxShadow" Value="0 4 12 0 #15000000"/>
        </Style>

        <!-- Estilos para TextBox y ComboBox -->
        <Style Selector="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#ced4da"/>
            <Setter Property="CornerRadius" Value="6"/>
        </Style>
        <Style Selector="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#ced4da"/>
            <Setter Property="CornerRadius" Value="6"/>
        </Style>
    </UserControl.Styles>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ============================================ -->
        <!-- HEADER CON ESTADÍSTICAS Y BOTÓN NUEVO -->
        <!-- ============================================ -->
        <Border Grid.Row="0" Background="White" 
                BorderThickness="0,0,0,1" BorderBrush="#e0e0e0"
                Padding="32,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Estadísticas -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="48">
                    <StackPanel Spacing="6">
                        <TextBlock Text="TOTAL COMERCIOS" 
                                   FontSize="13" FontWeight="Bold" 
                                   Foreground="#666" LetterSpacing="0.5"/>
                        <TextBlock Text="{Binding TotalComercios}" 
                                   FontSize="36" FontWeight="Bold" 
                                   Foreground="#003366"/>
                    </StackPanel>

                    <StackPanel Spacing="6">
                        <TextBlock Text="ACTIVOS" 
                                   FontSize="13" FontWeight="Bold" 
                                   Foreground="#666" LetterSpacing="0.5"/>
                        <TextBlock Text="{Binding ComerciosActivos}" 
                                   FontSize="36" FontWeight="Bold" 
                                   Foreground="#28a745"/>
                    </StackPanel>

                    <StackPanel Spacing="6">
                        <TextBlock Text="INACTIVOS" 
                                   FontSize="13" FontWeight="Bold" 
                                   Foreground="#666" LetterSpacing="0.5"/>
                        <TextBlock Text="{Binding ComerciosInactivos}" 
                                   FontSize="36" FontWeight="Bold" 
                                   Foreground="#dc3545"/>
                    </StackPanel>

                    <StackPanel Spacing="6">
                        <TextBlock Text="TOTAL LOCALES" 
                                   FontSize="13" FontWeight="Bold" 
                                   Foreground="#666" LetterSpacing="0.5"/>
                        <TextBlock Text="{Binding TotalLocales}" 
                                   FontSize="36" FontWeight="Bold" 
                                   Foreground="#FFC600"/>
                    </StackPanel>
                </StackPanel>

                <!-- Botón Nuevo Comercio -->
                <Button Grid.Column="1" 
                        Classes="btn-primary"
                        Command="{Binding MostrarFormularioComercioCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="+" FontSize="22" FontWeight="Bold"/>
                        <TextBlock Text="NUEVO COMERCIO" FontSize="15" FontWeight="Bold"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- ============================================ -->
        <!-- CONTENIDO PRINCIPAL -->
        <!-- ============================================ -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- ============================================ -->
            <!-- ÁREA DE FILTROS Y LISTA -->
            <!-- ============================================ -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="32,24" Spacing="24">
                    
                    <!-- BARRA DE FILTROS -->
                    <Border Background="White" 
                            BorderThickness="1" BorderBrush="#e0e0e0"
                            CornerRadius="10" Padding="24">
                        <Grid ColumnDefinitions="2*,*,*,Auto,Auto">
                            
                            <TextBox Grid.Column="0" 
                                     Text="{Binding FiltroBusqueda}"
                                     Watermark="Buscar por nombre, local o código..."
                                     Margin="0,0,12,0"/>

                            <ComboBox Grid.Column="1"
                                      SelectedItem="{Binding FiltroModulo}"
                                      ItemsSource="{Binding ModulosDisponibles}"
                                      Margin="0,0,12,0">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" FontSize="14"/>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>

                            <ComboBox Grid.Column="2"
                                      SelectedItem="{Binding FiltroEstado}"
                                      Margin="0,0,12,0">
                                <ComboBoxItem Content="Todos" FontSize="14"/>
                                <ComboBoxItem Content="Activo" FontSize="14"/>
                                <ComboBoxItem Content="Inactivo" FontSize="14"/>
                            </ComboBox>

                            <Button Grid.Column="3" 
                                    Classes="btn-primary"
                                    Command="{Binding AplicarFiltrosCommand}"
                                    Margin="0,0,8,0">
                                <TextBlock Text="APLICAR" FontSize="13" FontWeight="Bold"/>
                            </Button>

                            <Button Grid.Column="4" 
                                    Classes="btn-secondary"
                                    Command="{Binding LimpiarFiltrosCommand}">
                                <TextBlock Text="LIMPIAR" FontSize="13" FontWeight="Bold"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- LISTA DE COMERCIOS -->
                    <ItemsControl ItemsSource="{Binding ComerciosFiltrados}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Classes="comercio-card">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- CABECERA -->
                                        <Border Grid.Row="0" 
                                                Background="#f8f9fa" 
                                                Padding="24,20"
                                                CornerRadius="10,10,0,0">
                                            <Grid ColumnDefinitions="*,Auto">
                                                
                                                <StackPanel Grid.Column="0" Spacing="8">
                                                    <TextBlock Text="{Binding NombreComercio}" 
                                                               FontSize="22" FontWeight="Bold" 
                                                               Foreground="#003366"/>
                                                    
                                                    <StackPanel Orientation="Horizontal" Spacing="24">
                                                        <TextBlock FontSize="14" Foreground="#666">
                                                            <Run Text="Teléfono:"/>
                                                            <Run Text="{Binding NumeroContacto}" FontWeight="SemiBold"/>
                                                        </TextBlock>
                                                        <TextBlock FontSize="14" Foreground="#666">
                                                            <Run Text="Email:"/>
                                                            <Run Text="{Binding MailContacto}" FontWeight="SemiBold"/>
                                                        </TextBlock>
                                                        <TextBlock FontSize="14" Foreground="#666">
                                                            <Run Text="País:"/>
                                                            <Run Text="{Binding Pais}" FontWeight="SemiBold"/>
                                                        </TextBlock>
                                                    </StackPanel>
                                                    
                                                    <StackPanel Orientation="Horizontal" Spacing="20" Margin="0,4,0,0">
                                                        <Border Background="#e3f2fd" 
                                                                CornerRadius="6" Padding="12,6">
                                                            <TextBlock FontSize="13" FontWeight="SemiBold" Foreground="#0b5394">
                                                                <Run Text="{Binding CantidadLocales}"/>
                                                                <Run Text="Locales"/>
                                                            </TextBlock>
                                                        </Border>
                                                        <Border Background="#e8f5e9" 
                                                                CornerRadius="6" Padding="12,6">
                                                            <TextBlock FontSize="13" FontWeight="SemiBold" Foreground="#28a745">
                                                                <Run Text="{Binding TotalUsuarios}"/>
                                                                <Run Text="Empleados"/>
                                                            </TextBlock>
                                                        </Border>
                                                        <Border Background="{Binding Activo, Converter={StaticResource EstadoActivoColorConverter}}" 
                                                                CornerRadius="6" Padding="12,6">
                                                            <TextBlock Text="{Binding Activo, Converter={StaticResource EstadoTextoMayusculaConverter}}" 
                                                                       FontSize="13" FontWeight="Bold" 
                                                                       Foreground="White"/>
                                                        </Border>
                                                    </StackPanel>
                                                </StackPanel>

                                                <StackPanel Grid.Column="1" 
                                                            Orientation="Horizontal" 
                                                            Spacing="10"
                                                            VerticalAlignment="Top">
                                                    <Button Classes="btn-action"
                                                            Command="{Binding $parent[ItemsControl].((vm:ManageComerciosViewModel)DataContext).VerDetallesComercioCommand}"
                                                            CommandParameter="{Binding}">
                                                        <TextBlock Text="VER DETALLES" FontSize="12" FontWeight="Bold"/>
                                                    </Button>
                                                    <Button Classes="btn-action"
                                                            Command="{Binding $parent[ItemsControl].((vm:ManageComerciosViewModel)DataContext).EditarComercioCommand}"
                                                            CommandParameter="{Binding}">
                                                        <TextBlock Text="EDITAR" FontSize="12" FontWeight="Bold"/>
                                                    </Button>
                                                    <Button Background="#dc3545" 
                                                            Foreground="White"
                                                            BorderThickness="0"
                                                            CornerRadius="6"
                                                            Padding="14,8"
                                                            Command="{Binding $parent[ItemsControl].((vm:ManageComerciosViewModel)DataContext).EliminarComercioCommand}"
                                                            CommandParameter="{Binding}">
                                                        <TextBlock Text="ELIMINAR" FontSize="12" FontWeight="Bold"/>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                        </Border>

                                        <!-- DETALLES DE LOCALES -->
                                        <Border Grid.Row="1" 
                                                Padding="24,20"
                                                IsVisible="{Binding Locales.Count}">
                                            <StackPanel Spacing="12">
                                                <TextBlock Text="LOCALES DEL COMERCIO" 
                                                           FontSize="14" FontWeight="Bold" 
                                                           Foreground="#666"
                                                           LetterSpacing="0.5"
                                                           Margin="0,0,0,8"/>
                                                
                                                <ItemsControl ItemsSource="{Binding Locales}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border Background="#f8f9fa" 
                                                                    BorderThickness="1" BorderBrush="#e0e0e0"
                                                                    CornerRadius="8" 
                                                                    Padding="16,12"
                                                                    Margin="0,0,0,8">
                                                                <Grid ColumnDefinitions="Auto,*,Auto">
                                                                    
                                                                    <Border Grid.Column="0" 
                                                                            Background="#003366" 
                                                                            CornerRadius="6" 
                                                                            Padding="12,6"
                                                                            Margin="0,0,16,0">
                                                                        <TextBlock Text="{Binding CodigoLocal}" 
                                                                                   FontSize="14" FontWeight="Bold" 
                                                                                   Foreground="White"/>
                                                                    </Border>

                                                                    <StackPanel Grid.Column="1" Spacing="6">
                                                                        <TextBlock Text="{Binding NombreLocal}" 
                                                                                   FontSize="15" FontWeight="SemiBold" 
                                                                                   Foreground="#003366"/>
                                                                        <TextBlock FontSize="13" Foreground="#666">
                                                                            <Run Text="{Binding DireccionCompleta}"/>
                                                                        </TextBlock>
                                                                        <StackPanel Orientation="Horizontal" Spacing="16">
                                                                            <TextBlock FontSize="12" Foreground="#666">
                                                                                <Run Text="Tel:"/>
                                                                                <Run Text="{Binding Telefono}" FontWeight="SemiBold"/>
                                                                            </TextBlock>
                                                                            <TextBlock FontSize="12" Foreground="#666">
                                                                                <Run Text="Usuarios:"/>
                                                                                <Run Text="{Binding NumeroUsuarios}" FontWeight="SemiBold"/>
                                                                                <Run Text="/"/>
                                                                                <Run Text="{Binding NumeroUsuariosMax}" FontWeight="SemiBold"/>
                                                                            </TextBlock>
                                                                        </StackPanel>
                                                                        <StackPanel Orientation="Horizontal" Spacing="8" Margin="0,4,0,0">
                                                                            <TextBlock Text="MÓDULOS:" 
                                                                                       FontSize="11" FontWeight="Bold" 
                                                                                       Foreground="#666"/>
                                                                            <Border Background="#ffc107" 
                                                                                    CornerRadius="4" Padding="8,4"
                                                                                    IsVisible="{Binding ModuloDivisas}">
                                                                                <TextBlock Text="DIVISAS" 
                                                                                           FontSize="10" FontWeight="Bold" 
                                                                                           Foreground="White"/>
                                                                            </Border>
                                                                            <Border Background="#28a745" 
                                                                                    CornerRadius="4" Padding="8,4"
                                                                                    IsVisible="{Binding ModuloPackAlimentos}">
                                                                                <TextBlock Text="ALIMENTOS" 
                                                                                           FontSize="10" FontWeight="Bold" 
                                                                                           Foreground="White"/>
                                                                            </Border>
                                                                            <Border Background="#17a2b8" 
                                                                                    CornerRadius="4" Padding="8,4"
                                                                                    IsVisible="{Binding ModuloBilletesAvion}">
                                                                                <TextBlock Text="BILLETES" 
                                                                                           FontSize="10" FontWeight="Bold" 
                                                                                           Foreground="White"/>
                                                                            </Border>
                                                                            <Border Background="#6f42c1" 
                                                                                    CornerRadius="4" Padding="8,4"
                                                                                    IsVisible="{Binding ModuloPackViajes}">
                                                                                <TextBlock Text="VIAJES" 
                                                                                           FontSize="10" FontWeight="Bold" 
                                                                                           Foreground="White"/>
                                                                            </Border>
                                                                        </StackPanel>
                                                                    </StackPanel>

                                                                    <Border Grid.Column="2" 
                                                                            Background="{Binding Activo, Converter={StaticResource EstadoActivoColorConverter}}" 
                                                                            CornerRadius="6" 
                                                                            Padding="16,8"
                                                                            VerticalAlignment="Center">
                                                                        <TextBlock Text="{Binding Activo, Converter={StaticResource EstadoTextoMayusculaConverter}}" 
                                                                                   FontSize="12" FontWeight="Bold" 
                                                                                   Foreground="White"/>
                                                                    </Border>
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Mensaje cuando no hay comercios -->
                    <Border IsVisible="{Binding !ComerciosFiltrados.Count}"
                            Background="#f8f9fa"
                            BorderThickness="1" BorderBrush="#e0e0e0"
                            CornerRadius="10"
                            Padding="48"
                            MinHeight="300">
                        <StackPanel Spacing="16" 
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center">
                            <TextBlock Text="NO HAY COMERCIOS REGISTRADOS" 
                                       FontSize="20" FontWeight="Bold" 
                                       Foreground="#999"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Haz clic en NUEVO COMERCIO para agregar el primer comercio" 
                                       FontSize="15" Foreground="#999" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- ============================================ -->
            <!-- PANEL LATERAL DERECHO (FORM ULARIO) -->
            <!-- ============================================ -->
            <Border Grid.Column="1" 
                    IsVisible="{Binding MostrarPanelDerecho}"
                    Background="White"
                    BorderThickness="1,0,0,0"
                    BorderBrush="#e0e0e0"
                    Width="700"
                    BoxShadow="-4 0 12 0 #1A000000">
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header del Panel -->
                    <Border Grid.Row="0" Background="#003366" Padding="28,24">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="{Binding TituloPanelDerecho}" 
                                       FontSize="24" FontWeight="Bold" 
                                       Foreground="White"
                                       VerticalAlignment="Center"/>

                            <Button Grid.Column="1"
                                    Command="{Binding CerrarPanelDerechoCommand}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="White"
                                    FontSize="32"
                                    Padding="12,4"
                                    Cursor="Hand">
                                <TextBlock Text="×" FontWeight="Bold"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Contenido del Panel -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel IsVisible="{Binding MostrarFormulario}" 
                                    Margin="28" Spacing="24">
                            
                            <!-- INFORMACIÓN GENERAL -->
                            <Border Background="#f8f9fa" 
                                    CornerRadius="10" 
                                    Padding="24">
                                <StackPanel Spacing="20">
                                    <TextBlock Text="INFORMACIÓN GENERAL" 
                                               FontSize="16" FontWeight="Bold" 
                                               Foreground="#003366"
                                               LetterSpacing="0.5"/>
                                    
                                    <StackPanel>
                                        <TextBlock Text="Nombre comercio" 
                                                   FontSize="14" FontWeight="SemiBold" 
                                                   Margin="0,0,0,8"/>
                                        <TextBox Text="{Binding FormNombreComercio}" 
                                                 Watermark="Ingrese el nombre del comercio"
                                                 FontSize="15"/>
                                    </StackPanel>

                                    <StackPanel>
                                        <TextBlock Text="Teléfono principal" 
                                                   FontSize="14" FontWeight="SemiBold" 
                                                   Margin="0,0,0,8"/>
                                        <TextBox Text="{Binding FormNumeroContacto}" 
                                                 Watermark="+00 000 000 000"
                                                 FontSize="15"/>
                                    </StackPanel>

                                    <StackPanel>
                                        <TextBlock Text="Email principal" 
                                                   FontSize="14" FontWeight="SemiBold" 
                                                   Margin="0,0,0,8"/>
                                        <TextBox Text="{Binding FormMailContacto}" 
                                                 Watermark="contacto@comercio.com"
                                                 FontSize="15"/>
                                    </StackPanel>

                                    <StackPanel>
                                        <TextBlock Text="Observaciones" 
                                                   FontSize="14" FontWeight="SemiBold" 
                                                   Margin="0,0,0,8"/>
                                        <TextBox Text="{Binding FormObservaciones}" 
                                                 Watermark="Notas adicionales sobre el comercio..."
                                                 AcceptsReturn="True"
                                                 Height="100"
                                                 TextWrapping="Wrap"
                                                 FontSize="15"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- OFICINAS / LOCALES -->
                            <Border Background="#e3f2fd" 
                                    CornerRadius="10" 
                                    Padding="24">
                                <StackPanel Spacing="20">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <TextBlock Grid.Column="0"
                                                   Text="OFICINAS / LOCALES" 
                                                   FontSize="16" FontWeight="Bold" 
                                                   Foreground="#0b5394"
                                                   LetterSpacing="0.5"
                                                   VerticalAlignment="Center"/>
                                        
                                        <Button Grid.Column="1"
                                                Classes="btn-primary"
                                                Command="{Binding AgregarLocalCommand}">
                                            <StackPanel Orientation="Horizontal" Spacing="8">
                                                <TextBlock Text="+" FontSize="18" FontWeight="Bold"/>
                                                <TextBlock Text="AÑADIR LOCAL" FontSize="13" FontWeight="Bold"/>
                                            </StackPanel>
                                        </Button>
                                    </Grid>

                                    <ItemsControl ItemsSource="{Binding LocalesComercio}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="White" 
                                                        BorderThickness="1" BorderBrush="#90caf9"
                                                        CornerRadius="10" 
                                                        Padding="20"
                                                        Margin="0,0,0,16">
                                                    <StackPanel Spacing="16">
                                                        
                                                        <Grid ColumnDefinitions="*,Auto">
                                                            <Border Grid.Column="0"
                                                                    Background="#0b5394" 
                                                                    CornerRadius="6" 
                                                                    Padding="16,8"
                                                                    HorizontalAlignment="Left">
                                                                <TextBlock Text="{Binding CodigoLocal}" 
                                                                           FontSize="16" FontWeight="Bold" 
                                                                           Foreground="White"/>
                                                            </Border>
                                                            
                                                            <Button Grid.Column="1"
                                                                    Background="#dc3545"
                                                                    Foreground="White"
                                                                    BorderThickness="0"
                                                                    CornerRadius="6"
                                                                    Padding="12,6"
                                                                    Command="{Binding $parent[ItemsControl].((vm:ManageComerciosViewModel)DataContext).QuitarLocalCommand}"
                                                                    CommandParameter="{Binding}">
                                                                <TextBlock Text="ELIMINAR LOCAL" FontSize="12" FontWeight="Bold"/>
                                                            </Button>
                                                        </Grid>

                                                        <StackPanel>
                                                            <TextBlock Text="Nombre del local" 
                                                                       FontSize="13" FontWeight="SemiBold" 
                                                                       Margin="0,0,0,6"/>
                                                            <TextBox Text="{Binding NombreLocal}" 
                                                                     Watermark="Ej: Oficina Centro"/>
                                                        </StackPanel>

                                                        <Grid ColumnDefinitions="*,*">
                                                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                                                <TextBlock Text="País" 
                                                                           FontSize="13" FontWeight="SemiBold" 
                                                                           Margin="0,0,0,6"/>
                                                                <TextBox Text="{Binding Pais}" 
                                                                         Watermark="España"/>
                                                            </StackPanel>
                                                            <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                                                <TextBlock Text="Código postal" 
                                                                           FontSize="13" FontWeight="SemiBold" 
                                                                           Margin="0,0,0,6"/>
                                                                <TextBox Text="{Binding CodigoPostal}" 
                                                                         Watermark="08001"/>
                                                            </StackPanel>
                                                        </Grid>

                                                        <Grid ColumnDefinitions="*,2*">
                                                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                                                <TextBlock Text="Tipo de vía" 
                                                                           FontSize="13" FontWeight="SemiBold" 
                                                                           Margin="0,0,0,6"/>
                                                                <TextBox Text="{Binding TipoVia}" 
                                                                         Watermark="Calle"/>
                                                            </StackPanel>
                                                            <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                                                <TextBlock Text="Dirección" 
                                                                           FontSize="13" FontWeight="SemiBold" 
                                                                           Margin="0,0,0,6"/>
                                                                <TextBox Text="{Binding Direccion}" 
                                                                         Watermark="Augusta"/>
                                                            </StackPanel>
                                                        </Grid>

                                                        <Grid ColumnDefinitions="*,*,*">
                                                            <StackPanel Grid.Column="0" Margin="0,0,6,0">
                                                                <TextBlock Text="Número" 
                                                                           FontSize="13" FontWeight="SemiBold" 
                                                                           Margin="0,0,0,6"/>
                                                                <TextBox Text="{Binding LocalNumero}" 
                                                                         Watermark="123"/>
                                                            </StackPanel>
                                                            <StackPanel Grid.Column="1" Margin="6,0">
                                                                <TextBlock Text="Escalera / Piso" 
                                                                           FontSize="13" FontWeight="SemiBold" 
                                                                           Margin="0,0,0,6"/>
                                                                <TextBox Text="{Binding Escalera}" 
                                                                         Watermark="A"/>
                                                            </StackPanel>
                                                            <StackPanel Grid.Column="2" Margin="6,0,0,0">
                                                                <TextBlock Text="Piso" 
                                                                           FontSize="13" FontWeight="SemiBold" 
                                                                           Margin="0,0,0,6"/>
                                                                <TextBox Text="{Binding Piso}" 
                                                                         Watermark="Bajo A"/>
                                                            </StackPanel>
                                                        </Grid>

                                                        <Grid ColumnDefinitions="*,*">
                                                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                                                <TextBlock Text="Teléfono" 
                                                                           FontSize="13" FontWeight="SemiBold" 
                                                                           Margin="0,0,0,6"/>
                                                                <TextBox Text="{Binding Telefono}" 
                                                                         Watermark="930.000.000"/>
                                                            </StackPanel>
                                                            <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                                                <TextBlock Text="Email" 
                                                                           FontSize="13" FontWeight="SemiBold" 
                                                                           Margin="0,0,0,6"/>
                                                                <TextBox Text="{Binding Email}" 
                                                                         Watermark="local@comercio.com"/>
                                                            </StackPanel>
                                                        </Grid>

                                                        <StackPanel>
                                                            <TextBlock Text="Empleados máximos permitidos" 
                                                                       FontSize="13" FontWeight="SemiBold" 
                                                                       Margin="0,0,0,6"/>
                                                            <TextBox Text="{Binding NumeroUsuariosMax}" 
                                                                     Watermark="10"/>
                                                        </StackPanel>

                                                        <Grid ColumnDefinitions="Auto,*">
                                                            <TextBlock Grid.Column="0"
                                                                       Text="Estado" 
                                                                       FontSize="13" FontWeight="SemiBold" 
                                                                       VerticalAlignment="Center"
                                                                       Margin="0,0,16,0"/>
                                                            
                                                            <Button Grid.Column="1"
                                                                    Background="{Binding Activo, Converter={StaticResource EstadoActivoColorConverter}}"
                                                                    Foreground="White"
                                                                    BorderThickness="0"
                                                                    CornerRadius="6"
                                                                    Padding="20,10"
                                                                    HorizontalAlignment="Left"
                                                                    Command="{Binding $parent[ItemsControl].((vm:ManageComerciosViewModel)DataContext).CambiarEstadoLocalCommand}"
                                                                    CommandParameter="{Binding}">
                                                                <TextBlock Text="{Binding Activo, Converter={StaticResource EstadoTextoMayusculaConverter}}" 
                                                                           FontSize="14" FontWeight="Bold"/>
                                                            </Button>
                                                        </Grid>

                                                        <StackPanel>
                                                            <TextBlock Text="Módulos activos" 
                                                                       FontSize="13" FontWeight="Bold" 
                                                                       Margin="0,0,0,12"/>
                                                            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto">
                                                                <CheckBox Grid.Row="0" Grid.Column="0" 
                                                                          IsChecked="{Binding ModuloDivisas}" 
                                                                          Content="Compra divisa" 
                                                                          FontSize="13"
                                                                          Margin="0,0,0,8"/>
                                                                <CheckBox Grid.Row="0" Grid.Column="1" 
                                                                          IsChecked="{Binding ModuloPackAlimentos}" 
                                                                          Content="Packs de alimentos" 
                                                                          FontSize="13"
                                                                          Margin="0,0,0,8"/>
                                                                <CheckBox Grid.Row="1" Grid.Column="0" 
                                                                          IsChecked="{Binding ModuloBilletesAvion}" 
                                                                          Content="Billetes de avión" 
                                                                          FontSize="13"/>
                                                                <CheckBox Grid.Row="1" Grid.Column="1" 
                                                                          IsChecked="{Binding ModuloPackViajes}" 
                                                                          Content="Packs de viajes" 
                                                                          FontSize="13"/>
                                                            </Grid>
                                                        </StackPanel>

                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                </StackPanel>
                            </Border>

                            <!-- ARCHIVOS DEL COMERCIO -->
                            <Border Background="#fff3cd" 
                                    CornerRadius="10" 
                                    Padding="24">
                                <StackPanel Spacing="16">
                                    <Grid ColumnDefinitions="*,Auto">
                                        <TextBlock Grid.Column="0"
                                                   Text="ARCHIVOS DEL COMERCIO" 
                                                   FontSize="16" FontWeight="Bold" 
                                                   Foreground="#856404"
                                                   LetterSpacing="0.5"
                                                   VerticalAlignment="Center"/>
                                        
                                        <Button Grid.Column="1"
                                                Background="#856404"
                                                Foreground="White"
                                                BorderThickness="0"
                                                CornerRadius="6"
                                                Padding="16,10"
                                                Command="{Binding SeleccionarArchivosCommand}">
                                            <TextBlock Text="SELECCIONAR ARCHIVOS" 
                                                       FontSize="13" FontWeight="Bold"/>
                                        </Button>
                                    </Grid>

                                    <TextBlock Text="Puede subir documentos PDF, imágenes o archivos de texto relacionados con el comercio" 
                                               FontSize="13" Foreground="#856404"
                                               TextWrapping="Wrap"/>

                                    <ItemsControl ItemsSource="{Binding ArchivosParaSubir}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="White" 
                                                        BorderThickness="1" BorderBrush="#ffc107"
                                                        CornerRadius="6" 
                                                        Padding="12"
                                                        Margin="0,0,0,8">
                                                    <Grid ColumnDefinitions="*,Auto">
                                                        <TextBlock Grid.Column="0"
                                                                   Text="{Binding}" 
                                                                   FontSize="13" 
                                                                   VerticalAlignment="Center"/>
                                                        <Button Grid.Column="1"
                                                                Background="Transparent"
                                                                Foreground="#dc3545"
                                                                BorderThickness="0"
                                                                Command="{Binding $parent[ItemsControl].((vm:ManageComerciosViewModel)DataContext).QuitarArchivoCommand}"
                                                                CommandParameter="{Binding}">
                                                            <TextBlock Text="QUITAR" FontSize="12" FontWeight="Bold"/>
                                                        </Button>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Border>

                        </StackPanel>
                    </ScrollViewer>

                    <!-- Footer con Botones de Acción -->
                    <Border Grid.Row="2" 
                            Background="#f8f9fa" 
                            BorderThickness="0,1,0,0" 
                            BorderBrush="#e0e0e0"
                            Padding="28,20">
                        <Grid ColumnDefinitions="*,Auto,Auto">
                            
                            <TextBlock Grid.Column="0"
                                       Text="{Binding MensajeExito}"
                                       IsVisible="{Binding MostrarMensajeExito}"
                                       FontSize="14" FontWeight="SemiBold"
                                       Foreground="#28a745"
                                       VerticalAlignment="Center"/>

                            <Button Grid.Column="1"
                                    Classes="btn-secondary"
                                    Command="{Binding CerrarPanelDerechoCommand}"
                                    Margin="0,0,12,0">
                                <TextBlock Text="DESCARTAR" FontSize="14" FontWeight="Bold"/>
                            </Button>

                            <Button Grid.Column="2"
                                    Classes="btn-primary"
                                    Command="{Binding GuardarComercioCommand}">
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <TextBlock Text="GUARDAR COMERCIO" FontSize="14" FontWeight="Bold"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Overlay de carga -->
        <Border IsVisible="{Binding Cargando}"
                Background="#80000000"
                Grid.RowSpan="2">
            <StackPanel HorizontalAlignment="Center" 
                        VerticalAlignment="Center" 
                        Spacing="16">
                <TextBlock Text="CARGANDO..." 
                           FontSize="24" FontWeight="Bold" 
                           Foreground="White"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>

</UserControl>
