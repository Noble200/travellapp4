<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:Allva.Desktop.ViewModels.Admin"
             xmlns:converters="using:Allva.Desktop.Converters"
             mc:Ignorable="d" d:DesignWidth="1400" d:DesignHeight="900"
             x:Class="Allva.Desktop.Views.Admin.ManageComerciosView"
             x:DataType="vm:ManageComerciosViewModel">

    <UserControl.Styles>
        <!-- Estilo para botÃ³n primario -->
        <Style Selector="Button.btn-primary">
            <Setter Property="Background" Value="#003366"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.btn-primary:pointerover">
            <Setter Property="Background" Value="#f5c94b"/>
            <Setter Property="Foreground" Value="#003366"/>
        </Style>

        <!-- Estilo para botÃ³n secundario -->
        <Style Selector="Button.btn-secondary">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#003366"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#003366"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.btn-secondary:pointerover">
            <Setter Property="Background" Value="#003366"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Estilo para botones de acciÃ³n (Editar/Ver) -->
        <Style Selector="Button.btn-action">
            <Setter Property="Background" Value="#003366"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
        </Style>
        <Style Selector="Button.btn-action:pointerover">
            <Setter Property="Background" Value="#f5c94b"/>
            <Setter Property="Foreground" Value="#003366"/>
        </Style>

        <!-- Estilo para botÃ³n eliminar -->
        <Style Selector="Button.btn-danger">
            <Setter Property="Background" Value="#dc3545"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style Selector="Button.btn-danger:pointerover">
            <Setter Property="Background" Value="#c82333"/>
        </Style>

        <!-- Estilo para tarjetas de comercio -->
        <Style Selector="Border.comercio-card">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#e0e0e0"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="BoxShadow" Value="0 2 8 0 #15000000"/>
            <Setter Property="Transitions">
                <Transitions>
                    <BoxShadowsTransition Property="BoxShadow" Duration="0:0:0.2"/>
                </Transitions>
            </Setter>
        </Style>
        <Style Selector="Border.comercio-card:pointerover">
            <Setter Property="BoxShadow" Value="0 4 16 0 #25000000"/>
        </Style>

        <!-- Estilos para TextBox y ComboBox -->
        <Style Selector="TextBox">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#ccc"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        <Style Selector="ComboBox">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#ccc"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        
        <!-- Estilo para CheckBox -->
        <Style Selector="CheckBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,8"/>
        </Style>
    </UserControl.Styles>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ============================================ -->
        <!-- HEADER CON ESTADÃSTICAS Y BOTÃ“N NUEVO -->
        <!-- ============================================ -->
        <Border Grid.Row="0" Background="White" 
                BorderThickness="0,0,0,1" BorderBrush="#e0e0e0"
                Padding="32,24">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- EstadÃ­sticas -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="40">
                    <!-- Total Comercios -->
                    <StackPanel Spacing="4">
                        <TextBlock Text="Total Comercios" 
                                   FontSize="14" FontWeight="SemiBold" Foreground="#666"/>
                        <TextBlock Text="{Binding TotalComercios}" 
                                   FontSize="32" FontWeight="Bold" Foreground="#003366"/>
                    </StackPanel>

                    <!-- Comercios Activos -->
                    <StackPanel Spacing="4">
                        <TextBlock Text="Activos" 
                                   FontSize="14" FontWeight="SemiBold" Foreground="#666"/>
                        <TextBlock Text="{Binding ComerciosActivos}" 
                                   FontSize="32" FontWeight="Bold" Foreground="#28a745"/>
                    </StackPanel>

                    <!-- Comercios Inactivos -->
                    <StackPanel Spacing="4">
                        <TextBlock Text="Inactivos" 
                                   FontSize="14" FontWeight="SemiBold" Foreground="#666"/>
                        <TextBlock Text="{Binding ComerciosInactivos}" 
                                   FontSize="32" FontWeight="Bold" Foreground="#dc3545"/>
                    </StackPanel>

                    <!-- Total Locales -->
                    <StackPanel Spacing="4">
                        <TextBlock Text="Total Locales" 
                                   FontSize="14" FontWeight="SemiBold" Foreground="#666"/>
                        <TextBlock Text="{Binding TotalLocales}" 
                                   FontSize="32" FontWeight="Bold" Foreground="#f5c94b"/>
                    </StackPanel>
                </StackPanel>

                <!-- BotÃ³n Nuevo Comercio -->
                <Button Grid.Column="1" 
                        Classes="btn-primary"
                        Command="{Binding MostrarFormularioComercioCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="+" FontSize="20" FontWeight="Bold"/>
                        <TextBlock Text="NUEVO COMERCIO" FontSize="15"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- ============================================ -->
        <!-- CONTENIDO PRINCIPAL CON FILTROS Y LISTA -->
        <!-- ============================================ -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- ============================================ -->
            <!-- ÃREA DE FILTROS Y LISTA DE COMERCIOS -->
            <!-- ============================================ -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="32,24" Spacing="24">
                    
                    <!-- ============================================ -->
                    <!-- FILTROS DE BÃšSQUEDA -->
                    <!-- ============================================ -->
                    <Border Background="White" CornerRadius="10" Padding="24" 
                            BoxShadow="0 2 8 0 #10000000">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="16"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- TÃ­tulo -->
                            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4"
                                       Text="Filtros de BÃºsqueda"
                                       FontSize="18" FontWeight="Bold" Foreground="#003366"
                                       Margin="0,0,0,16"/>

                            <!-- BÃºsqueda por nombre -->
                            <StackPanel Grid.Row="2" Grid.Column="0" Margin="0,0,12,0">
                                <TextBlock Text="Buscar comercio" 
                                           FontSize="14" FontWeight="SemiBold" Foreground="#333"
                                           Margin="0,0,0,8"/>
                                <TextBox Text="{Binding FiltroBusqueda}" 
                                         Watermark="Nombre del comercio o local..."
                                         Height="44"/>
                            </StackPanel>

                            <!-- Filtro por paÃ­s -->
                            <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,0,12,0">
                                <TextBlock Text="PaÃ­s" 
                                           FontSize="14" FontWeight="SemiBold" Foreground="#333"
                                           Margin="0,0,0,8"/>
                                <ComboBox SelectedItem="{Binding FiltroPais}"
                                          ItemsSource="{Binding PaisesDisponibles}"
                                          Height="44" HorizontalAlignment="Stretch">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" FontSize="14"/>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </StackPanel>

                            <!-- Filtro por estado -->
                            <StackPanel Grid.Row="2" Grid.Column="2" Margin="0,0,12,0">
                                <TextBlock Text="Estado" 
                                           FontSize="14" FontWeight="SemiBold" Foreground="#333"
                                           Margin="0,0,0,8"/>
                                <ComboBox SelectedItem="{Binding FiltroEstado}"
                                          Height="44" HorizontalAlignment="Stretch">
                                    <ComboBoxItem Content="Todos" FontSize="14"/>
                                    <ComboBoxItem Content="Activo" FontSize="14"/>
                                    <ComboBoxItem Content="Inactivo" FontSize="14"/>
                                </ComboBox>
                            </StackPanel>

                            <!-- BotÃ³n Aplicar Filtros -->
                            <Button Grid.Row="2" Grid.Column="3"
                                    Classes="btn-primary"
                                    Command="{Binding AplicarFiltrosCommand}"
                                    Height="44" Margin="0,24,0,0"
                                    MinWidth="120">
                                <TextBlock Text="APLICAR" FontSize="14"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- ============================================ -->
                    <!-- LISTA DE COMERCIOS -->
                    <!-- ============================================ -->
                    <ItemsControl ItemsSource="{Binding ComerciosFiltrados}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Classes="comercio-card">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="12"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="20"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Header: Nombre y Estado -->
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0"
                                                       Text="{Binding NombreComercio}"
                                                       FontSize="22" FontWeight="Bold"
                                                       Foreground="#003366"/>

                                            <Border Grid.Column="1"
                                                    Background="{Binding EstadoColor}"
                                                    CornerRadius="12"
                                                    Padding="12,6">
                                                <TextBlock Text="{Binding EstadoTexto}"
                                                           Foreground="White"
                                                           FontWeight="Bold"
                                                           FontSize="12"/>
                                            </Border>
                                        </Grid>

                                        <!-- InformaciÃ³n del comercio -->
                                        <Grid Grid.Row="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- PaÃ­s -->
                                            <StackPanel Grid.Column="0" Spacing="6">
                                                <TextBlock Text="ðŸŒ PaÃ­s" FontSize="13" Foreground="#666"/>
                                                <TextBlock Text="{Binding Pais}" FontSize="15" FontWeight="SemiBold"/>
                                            </StackPanel>

                                            <!-- TelÃ©fono -->
                                            <StackPanel Grid.Column="1" Spacing="6">
                                                <TextBlock Text="ðŸ“ž TelÃ©fono" FontSize="13" Foreground="#666"/>
                                                <TextBlock Text="{Binding NumeroContacto}" FontSize="15" FontWeight="SemiBold"/>
                                            </StackPanel>

                                            <!-- Email -->
                                            <StackPanel Grid.Column="2" Spacing="6">
                                                <TextBlock Text="ðŸ“§ Email" FontSize="13" Foreground="#666"/>
                                                <TextBlock Text="{Binding MailContacto}" FontSize="15" FontWeight="SemiBold"/>
                                            </StackPanel>

                                            <!-- Locales -->
                                            <StackPanel Grid.Column="3" Spacing="6">
                                                <TextBlock Text="ðŸ¢ Locales" FontSize="13" Foreground="#666"/>
                                                <TextBlock Text="{Binding CantidadLocales}" FontSize="15" FontWeight="SemiBold"/>
                                            </StackPanel>
                                        </Grid>

                                        <!-- Botones de acciÃ³n -->
                                        <StackPanel Grid.Row="4" Orientation="Horizontal" Spacing="10">
                                            <Button Classes="btn-action"
                                                    Command="{Binding $parent[ItemsControl].((vm:ManageComerciosViewModel)DataContext).EditarComercioCommand}"
                                                    CommandParameter="{Binding}">
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <TextBlock Text="âœï¸" FontSize="16"/>
                                                    <TextBlock Text="Editar"/>
                                                </StackPanel>
                                            </Button>

                                            <Button Classes="btn-action"
                                                    Command="{Binding $parent[ItemsControl].((vm:ManageComerciosViewModel)DataContext).VerDetallesComercioCommand}"
                                                    CommandParameter="{Binding}">
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <TextBlock Text="" FontSize="16"/>
                                                    <TextBlock Text="Ver Detalles"/>
                                                </StackPanel>
                                            </Button>

                                            <Button Classes="btn-danger"
                                                    Command="{Binding $parent[ItemsControl].((vm:ManageComerciosViewModel)DataContext).EliminarComercioCommand}"
                                                    CommandParameter="{Binding}">
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <TextBlock Text="ðŸ—‘ï¸" FontSize="16"/>
                                                    <TextBlock Text="Eliminar"/>
                                                </StackPanel>
                                            </Button>

                                            <Button Background="{Binding EstadoBotonColor}"
                                                    Foreground="White"
                                                    FontWeight="Bold"
                                                    FontSize="14"
                                                    Padding="14,8"
                                                    BorderThickness="0"
                                                    CornerRadius="4"
                                                    Cursor="Hand"
                                                    Command="{Binding $parent[ItemsControl].((vm:ManageComerciosViewModel)DataContext).CambiarEstadoComercioCommand}"
                                                    CommandParameter="{Binding}">
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <TextBlock Text="ðŸ”„" FontSize="16"/>
                                                    <TextBlock Text="{Binding EstadoBotonTexto}"/>
                                                </StackPanel>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Mensaje cuando no hay comercios -->
                    <Border IsVisible="{Binding !ComerciosFiltrados.Count}"
                            Background="#f8f9fa"
                            CornerRadius="10"
                            Padding="40"
                            MinHeight="200">
                        <StackPanel Spacing="16" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="ðŸ“­" FontSize="64" HorizontalAlignment="Center"/>
                            <TextBlock Text="No se encontraron comercios" 
                                       FontSize="18" FontWeight="SemiBold" Foreground="#666"
                                       HorizontalAlignment="Center"/>
                            <TextBlock Text="Intenta ajustar los filtros de bÃºsqueda o crea un nuevo comercio" 
                                       FontSize="15" Foreground="#999" 
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- ============================================ -->
            <!-- PANEL LATERAL DERECHO (FORMULARIO/DETALLES) - AMPLIADO -->
            <!-- ============================================ -->
            <Border Grid.Column="1" 
                    IsVisible="{Binding MostrarPanelDerecho}"
                    Background="White"
                    BorderThickness="1,0,0,0"
                    BorderBrush="#e0e0e0"
                    Width="700"
                    BoxShadow="-4 0 12 0 #10000000">
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header del panel -->
                    <Border Grid.Row="0" Background="#003366" Padding="28,24">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="{Binding TituloPanelDerecho}" 
                                       FontSize="22" FontWeight="Bold" 
                                       Foreground="White"
                                       VerticalAlignment="Center"/>

                            <Button Grid.Column="1"
                                    Command="{Binding CerrarPanelDerechoCommand}"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Foreground="White"
                                    FontSize="28"
                                    Padding="12,4"
                                    Cursor="Hand">
                                <TextBlock Text="âœ•" FontWeight="Bold"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Contenido del panel (ScrollViewer para formulario o detalles) -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <Panel>
                        
                        <!-- =========================================== -->
                        <!-- FORMULARIO DE CREAR/EDITAR COMERCIO -->
                        <!-- =========================================== -->
                        <StackPanel IsVisible="{Binding MostrarFormulario}" Margin="28" Spacing="20">
                            
                            <!-- SecciÃ³n: InformaciÃ³n del Comercio -->
                            <Border Background="#f8f9fa" CornerRadius="8" Padding="20">
                                <StackPanel Spacing="16">
                                    <TextBlock Text="ðŸ“‹ InformaciÃ³n del Comercio" 
                                               FontSize="16" FontWeight="Bold" Foreground="#003366"/>
                                    
                                    <!-- Nombre Comercial -->
                                    <StackPanel>
                                        <TextBlock Text="Nombre Comercial *" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,6"/>
                                        <TextBox Text="{Binding FormNombreComercio}" 
                                                 Watermark="Ingrese el nombre comercial..."/>
                                    </StackPanel>

                                    <!-- DirecciÃ³n Central -->
                                    <StackPanel>
                                        <TextBlock Text="DirecciÃ³n Central" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,6"/>
                                        <TextBox Text="{Binding FormDireccionCentral}" 
                                                 Watermark="DirecciÃ³n de la oficina central..."/>
                                    </StackPanel>

                                    <!-- TelÃ©fono y PaÃ­s en Grid -->
                                    <Grid ColumnDefinitions="*,*">
                                        <StackPanel Grid.Column="0" Margin="0,0,6,0">
                                            <TextBlock Text="TelÃ©fono" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,6"/>
                                            <TextBox Text="{Binding FormNumeroContacto}" 
                                                     Watermark="+00 000 000 000"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" Margin="6,0,0,0">
                                            <TextBlock Text="PaÃ­s *" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,6"/>
                                            <TextBox Text="{Binding FormPais}" 
                                                     Watermark="Argentina, EspaÃ±a, MÃ©xico..."/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Email -->
                                    <StackPanel>
                                        <TextBlock Text="Email de Contacto *" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,6"/>
                                        <TextBox Text="{Binding FormMailContacto}" 
                                                 Watermark="ejemplo@comercio.com"/>
                                    </StackPanel>

                                    <!-- Observaciones -->
                                    <StackPanel>
                                        <TextBlock Text="Observaciones" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,6"/>
                                        <TextBox Text="{Binding FormObservaciones}" 
                                                 Watermark="Notas adicionales..."
                                                 AcceptsReturn="True"
                                                 Height="80"
                                                 TextWrapping="Wrap"/>
                                    </StackPanel>

                                    <!-- Estado Activo -->
                                    <CheckBox IsChecked="{Binding FormActivo}" 
                                              Content="Comercio Activo"
                                              FontSize="14" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>

                            <!-- SecciÃ³n: Archivos del Comercio -->
                            <Border Background="#fff3cd" CornerRadius="8" Padding="20">
                                <StackPanel Spacing="16">
                                    <Grid>
                                        <TextBlock Text="ðŸ“Ž Archivos del Comercio" 
                                                   FontSize="16" FontWeight="Bold" Foreground="#856404"
                                                   VerticalAlignment="Center"/>
                                        <Button HorizontalAlignment="Right"
                                                Classes="btn-primary"
                                                Command="{Binding SubirArchivoCommand}"
                                                Padding="10,6">
                                            <TextBlock Text="+ Subir Archivo" FontSize="13"/>
                                        </Button>
                                    </Grid>

                                    <!-- Lista de archivos a subir -->
                                    <ItemsControl ItemsSource="{Binding ArchivosParaSubir}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="White" CornerRadius="4" Padding="12" Margin="0,0,0,8"
                                                        BorderThickness="1" BorderBrush="#ffc107">
                                                    <Grid ColumnDefinitions="Auto,*,Auto">
                                                        <TextBlock Grid.Column="0" Text="ðŸ“„" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                                        <TextBlock Grid.Column="1" Text="{Binding}" 
                                                                   FontSize="13" VerticalAlignment="Center"
                                                                   TextTrimming="CharacterEllipsis"/>
                                                        <Button Grid.Column="2"
                                                                Background="#dc3545"
                                                                Foreground="White"
                                                                FontSize="12"
                                                                Padding="8,4"
                                                                CornerRadius="4"
                                                                BorderThickness="0"
                                                                Command="{Binding $parent[ItemsControl].((vm:ManageComerciosViewModel)DataContext).EliminarArchivoSubidoCommand}"
                                                                CommandParameter="{Binding}">
                                                            <TextBlock Text="Eliminar"/>
                                                        </Button>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <!-- Mensaje si no hay archivos -->
                                    <Border IsVisible="{Binding !ArchivosParaSubir.Count}"
                                            Background="White" CornerRadius="4" Padding="20"
                                            BorderThickness="1" BorderBrush="#ffc107">
                                        <TextBlock Text="No hay archivos para subir" 
                                                   FontSize="13" Foreground="#856404"
                                                   HorizontalAlignment="Center"/>
                                    </Border>
                                </StackPanel>
                            </Border>

                            <!-- SecciÃ³n: Locales -->
                            <Border Background="#e8f4f8" CornerRadius="8" Padding="20">
                                <StackPanel Spacing="16">
                                    <Grid>
                                        <TextBlock Text="ðŸ¢ Locales del Comercio" 
                                                   FontSize="16" FontWeight="Bold" Foreground="#003366"
                                                   VerticalAlignment="Center"/>
                                        <Button HorizontalAlignment="Right"
                                                Classes="btn-primary"
                                                Command="{Binding AgregarLocalCommand}"
                                                Padding="10,6">
                                            <TextBlock Text="+ Agregar Local" FontSize="13"/>
                                        </Button>
                                    </Grid>

                                    <!-- Lista de Locales -->
                                    <ItemsControl ItemsSource="{Binding LocalesComercio}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="White" CornerRadius="6" Padding="16" Margin="0,0,0,12"
                                                        BorderThickness="1" BorderBrush="#ccc">
                                                    <StackPanel Spacing="12">
                                                        <!-- Header Local -->
                                                        <Grid>
                                                            <TextBlock Text="{Binding CodigoLocal, StringFormat='Local: {0}'}" 
                                                                       FontSize="15" FontWeight="Bold" Foreground="#003366"/>
                                                            <Button HorizontalAlignment="Right"
                                                                    Background="#dc3545"
                                                                    Foreground="White"
                                                                    FontSize="12"
                                                                    Padding="8,4"
                                                                    CornerRadius="4"
                                                                    BorderThickness="0"
                                                                    Command="{Binding $parent[ItemsControl].((vm:ManageComerciosViewModel)DataContext).EliminarLocalCommand}"
                                                                    CommandParameter="{Binding}">
                                                                <TextBlock Text="Eliminar"/>
                                                            </Button>
                                                        </Grid>

                                                        <!-- Nombre Local y CÃ³digo -->
                                                        <Grid ColumnDefinitions="*,*">
                                                            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                                                <TextBlock Text="Nombre Local" FontSize="12" Margin="0,0,0,4"/>
                                                                <TextBox Text="{Binding NombreLocal}" Watermark="Local 1"/>
                                                            </StackPanel>
                                                            <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                                                <TextBlock Text="CÃ³digo" FontSize="12" Margin="0,0,0,4"/>
                                                                <TextBox Text="{Binding CodigoLocal}" 
                                                                         IsReadOnly="True"
                                                                         Background="#f0f0f0"/>
                                                            </StackPanel>
                                                        </Grid>

                                                        <!-- PaÃ­s y CÃ³digo Postal -->
                                                        <Grid ColumnDefinitions="*,*">
                                                            <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                                                <TextBlock Text="PaÃ­s" FontSize="12" Margin="0,0,0,4"/>
                                                                <TextBox Text="{Binding Pais}" Watermark="Argentina, EspaÃ±a..."/>
                                                            </StackPanel>
                                                            <StackPanel Grid.Column="1" Margin="5,0,0,0">
